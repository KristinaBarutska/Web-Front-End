<form>
     <div id="invalid-username-message" class="hidden red">
         This username is already taken!
     </div>
   <div class="form-group">
     <label for="username-register">Username:</label>
     <input type="text" class="form-control" id="username-register" placeholder="username">
   </div>
   <div class="form-group">
     <label for="password-register-1">Password:</label>
     <input type="password" class="form-control" id="password-register-1" placeholder="password">
   </div>
     <div id="invalid-password-message" class="hidden red">
         Please repeat password again!
     </div>
   <div class="form-group">
     <label for="password-register-2">Repeat password: </label>
     <input type="password" class="form-control" id="password-register-2" placeholder="repeat password">
   </div>
   <button id="submit-register" class="btn btn-default">Register</button>
 </form>